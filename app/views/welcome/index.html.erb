<body style="background-color:#020202;">
<div align="center">
  <img height="300em" src="../images/beto.jpg" alt="Roberto Simão Barbearia"/>
</div>
<div align="center">
  <%if cliente_signed_in? %>
    <%= link_to "Agendamento", current_cliente %>
  <%elsif barbeiro_signed_in?%>
    <button type="button"><%= link_to "Agenda", current_barbeiro %></button>
  <%elsif admin_signed_in?%>
    <button type="button"><%= link_to "Clientes", clientes_path %></button>
    <button type="button"><%= link_to "Barbeiros", barbeiros_path %></button>
    <button type="button"><%= link_to "Serviços", services_path %></button>
  <%else %>
    <%= button_to "Área de Clientes", new_cliente_session_path%>
    <p></p>
    <%= button_to "Área de Barbeiros", new_barbeiro_session_path %>
    <p></p>
    <%= button_to "Área do Admin", new_admin_session_path%>
  <%end %>
  
</div>