<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

  <title>Projeto Barbearia</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to "Inicio", root_path,class: "navbar-brand"  %>

  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
    </ul>
  </div>
  <%if cliente_signed_in? %>
    <h6 class="pr-5"><%=current_cliente.nome%> - Cliente</h6>
    <%= link_to "Editar",edit_cliente_registration_path,class: "navbar-brand"  %>
    <%= button_to "Sair", destroy_cliente_session_path, method: :delete %>
  <%elsif barbeiro_signed_in? %>
    <h6 class="pr-5"><%=current_barbeiro.nome%> - Barbeiro</h6>
    <%= button_to "Sair", destroy_barbeiro_session_path, method: :delete %>
    <%= link_to "Editar",edit_barbeiro_registration_path,class: "navbar-brand"  %>
  <%elsif admin_signed_in? %>
    <h6 class="pr-5"><%=current_admin.nome%> - Admin</h6>
    <%= button_to "Sair", destroy_admin_session_path, method: :delete %>
    <%= link_to "Editar",edit_admin_registration_path,class: "navbar-brand"  %>
  <%end %>



</nav>

<%= yield %>

<!-- Optional JavaScript; choose one of the two! -->

<!-- Option 1: jQuery and Bootstrap Bundle (includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>

